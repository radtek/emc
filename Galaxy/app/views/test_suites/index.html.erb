<fieldset>
	<legend class="galaxy_legend">Listing Test Suites</legend>
	<table>
	  <thead>
	    <tr>
	   	  <th>ID</th>
	      <th>Name</th>
	      <th>Sub suites</th>
	      <th>Test cases</th>
	      <th>Created by</th>
	      <th>Description</th>
	      <th>Operations</th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @test_suites.each do |test_suite| %>
	      <tr>
	      	<td><%= test_suite.id %></td>
	        <td><%= test_suite.name %></td>
	        <td title='<%= test_suite.sub_suites %>'><%= shorten_string(test_suite.sub_suites, 10) %></td>
	        <td title='<%= test_suite.test_cases %>'><%= shorten_string(test_suite.test_cases,10) %></td>
	        <td><%= force_user_name(test_suite.created_by) %></td>
	        <td title='<%= test_suite.description %>'><%= shorten_string(test_suite.description, 20) %></td>
	        <td class="item_operations"><%= link_to 'Show', test_suite_path(test_suite) %>
	        <%= link_to 'Edit', edit_test_suite_path(test_suite) %>
	        <%= link_to 'Destroy', test_suite_path(test_suite), method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

</fieldset>

<br>

<%= link_to 'New Test suite', new_test_suite_path %>
